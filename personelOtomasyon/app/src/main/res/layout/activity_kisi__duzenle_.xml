<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context="android.personelotomasyon.Kisi_Duzenle_Activity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/et_kisi_ad_duzelt"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Ad"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/et_kisi_soyad_duzelt"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Soyad"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_guncelle_duzenle"
            android:layout_weight="1"
            android:text="Kaydet"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_yeni_kisi_ekle_duzenle"
            android:layout_weight="1"
            android:text="Yeni KiÅŸi"/>

    </LinearLayout>
</LinearLayout>

